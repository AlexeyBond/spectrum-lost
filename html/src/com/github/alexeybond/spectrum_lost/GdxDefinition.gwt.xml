<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN"
        "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="html">
    <inherits name='com.badlogic.gdx.backends.gdx_backends_gwt'/>

    <inherits name='SpectrumLostGdx'/>
    <entry-point class='com.github.alexeybond.spectrum_lost.client.HtmlLauncher'/>

    <set-configuration-property name="gdx.assetpath" value="../android/assets"/>

    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.levels.json.GridDesc"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.levels.json.CellDesc"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.model.util.Direction"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.levels.json.compact.ChapterLevelsDesc"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.levels.json.compact.ChaptersList"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.levels.json.compact.CompactChapterDesc"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.achievements.impl.StatusesList"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.achievements.AchievementStatus"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.achievements.rating.RatingSettings"/>
    <extend-configuration-property name="gdx.reflect.include"
                                   value="com.github.alexeybond.spectrum_lost.achievements.rating.RatingCriteria"/>
    <extend-configuration-property name="gdx.reflect.include" value="java.util.LinkedHashMap"/>
</module>
